<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticSqliteCrud.Views.ModificarRaza">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label Text="MODIFICAR RAZA DE PERRO"
                   TextColor="Red"
                   FontSize="30"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Raza.Codigo}" 
                   HorizontalOptions="FillAndExpand"/>

            <Entry Text="{Binding Raza.Nombre}" Placeholder="Nombre"
                   HorizontalOptions="FillAndExpand"/>

            <Entry Text="{Binding Raza.Caracteristicas}" Placeholder="Caracteristicas"
                   HorizontalOptions="FillAndExpand"/>

            <Button Text="MODIFICAR" HorizontalOptions="FillAndExpand"
                    Command="{Binding ModificarRaza}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage> 