             x:Class="PracticSqliteCrud.MainPage">

    <StackLayout Margin="0,30,0,0">
       

        <Button Text="Mostrar" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow"
                x:Name="btnmostrar"/>

        <Button Text="Crear" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow"
                x:Name="btnnuevo"/>



        <StackLayout Orientation="Horizontal" BackgroundColor="Orange">
            <Label Text="Buscar por código de  raza de perro: "/>
            <Entry x:Name="cajacodigo" HorizontalOptions="FillAndExpand"/>
            <Button Text="Borrar" x:Name="btneliminar" 
                />

            <Button Text="Modificar" x:Name="btnmodificar" />
        </StackLayout>






    </StackLayout>

</ContentPage>